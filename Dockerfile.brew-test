FROM debian:bookworm

# Install dependencies for Homebrew and tmux
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    file \
    git \
    procps \
    sudo \
    tmux \
    locales \
    && rm -rf /var/lib/apt/lists/*

# Set up locale for proper UTF-8 support
RUN sed -i '/en_US.UTF-8/s/^# //g' /etc/locale.gen && locale-gen
ENV LANG=en_US.UTF-8
ENV LC_ALL=en_US.UTF-8

# Create non-root user with sudo access (Homebrew requires non-root)
RUN useradd -m -s /bin/bash brewuser && echo "brewuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers
USER brewuser
WORKDIR /home/brewuser

# Configure git for tap creation
RUN git config --global user.email "test@test.com" && git config --global user.name "Test"

# Install Homebrew
RUN NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# Add Homebrew to PATH
ENV PATH="/home/linuxbrew/.linuxbrew/bin:/home/linuxbrew/.linuxbrew/sbin:$PATH"

# Create local tap and install formula
COPY --chown=brewuser:brewuser Formula/tvniki.rb /tmp/tvniki.rb
RUN brew tap-new local/tvniki && \
    cp /tmp/tvniki.rb $(brew --repository local/tvniki)/Formula/tvniki.rb && \
    brew install --head local/tvniki/tvniki

# Run smoke test: start in tmux, capture screen, validate UI elements
CMD ["bash", "-c", "\
  tmux new-session -d -s test -x 100 -y 30 'tvniki' && \
  sleep 2 && \
  OUTPUT=$(tmux capture-pane -t test -p) && \
  tmux kill-session -t test && \
  echo \"$OUTPUT\" && \
  echo '=== Validating UI ===' && \
  echo \"$OUTPUT\" | grep -q 'File  Edit  Search' || { echo 'FAIL: Menu bar not found'; exit 1; } && \
  echo \"$OUTPUT\" | grep -q 'tvNiki' || { echo 'FAIL: tvNiki title not found'; exit 1; } && \
  echo \"$OUTPUT\" | grep -q 'Ctrl-F9' || { echo 'FAIL: Status bar not found'; exit 1; } && \
  echo 'PASS: All UI elements validated' \
"]
